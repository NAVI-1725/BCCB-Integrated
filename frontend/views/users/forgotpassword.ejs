<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Forgot Password</title>

    <!-- Bootstrap CSS -->
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">

    <!-- Custom CSS -->
    <link href="/css/styles.css" rel="stylesheet">

    <!-- Confetti JS (optional for success messages) -->
    <script src="https://cdn.jsdelivr.net/npm/canvas-confetti@1.5.1/dist/confetti.browser.min.js"></script>

    <style>
        @keyframes move-background {
            from {
                background-position: 0 0;
            }
            to {
                background-position: 100% 100%;
            }
        }

        /* Custom button size */
.btn-sm {
    padding: 5px 20px; /* Adjust padding for a smaller button */
    font-size: 0.875rem; /* Decrease the font size */
    width: 50%; /* Make it half the width of the original */
    margin: 0 auto; /* Center the button */
}

        body::before {
            content: '';
            position: absolute;
            width: 100%;
            height: 100%;
            background: linear-gradient(135deg, #d4f1f9, #a8e0e8); /* Gradient background */
            z-index: -1;
            animation: move-background 20s linear infinite;
        }

        /* Light blue background color */
        .forgot-password-page {
            min-height: 82vh;
            display: flex;
            justify-content: center;
            align-items: center;
            background: linear-gradient(135deg, #d4f1f9, #a8e0e8); /* Gradient background */
            position: relative;
            overflow: hidden;
        }

        /* Forgot Password box styles */
        .forgot-password-box {
            width: 90%;
            max-width: 510px;
            background-color: rgba(255, 255, 255, 0.5); /* Increase transparency */
            border-radius: 30px;
            padding: 35px;
            box-shadow: 0 20px 50px rgba(0, 0, 0, 0.3); /* Softer shadow */
            backdrop-filter: blur(10px); /* Adds a glass-like blur effect */
            animation: floating 3s ease-in-out infinite;
            position: relative;
            overflow: hidden; /* Prevents bubbles from overflowing */
        }

        .forgot-password-box:hover {
            box-shadow: 0 20px 40px rgba(0, 0, 0, 0.4);
        }

        @keyframes floating {
            0%, 100% {
                transform: translateY(0px);
            }
            50% {
                transform: translateY(-10px);
            }
        }

        /* Floating Bubbles Effect */
        .bubble {
            position: absolute;
            bottom: -20px;
            width: 30px; /* Increased bubble size */
            height: 30px; /* Increased bubble size */
            border-radius: 50%;
            background-color: rgba(255, 255, 255, 0.6);
            animation: float-bubbles 5s ease-in-out infinite;
        }

        @keyframes float-bubbles {
            0% {
                opacity: 0.7;
                transform: translateY(0) scale(1);
            }
            50% {
                opacity: 0.4;
                transform: translateY(-50px) scale(1.5);
            }
            100% {
                opacity: 0.7;
                transform: translateY(-100px) scale(1);
            }
        }
        a {
        color: #0a879a;
        text-decoration: none;
        transition: color 0.3s ease;
    }

    a:hover {
        color: #6dc9e2; /* Slightly darker shade for hover effect */
        text-decoration: underline; /* Optional for hover styling */
    }

        /* Randomize bubble position */
        .bubble:nth-child(1) { left: 10%; animation-duration: 6s; }
        .bubble:nth-child(2) { left: 20%; animation-duration: 7s; }
        .bubble:nth-child(3) { left: 30%; animation-duration: 5s; }
        .bubble:nth-child(4) { left: 40%; animation-duration: 8s; }
        .bubble:nth-child(5) { left: 50%; animation-duration: 6s; }
        .bubble:nth-child(6) { left: 60%; animation-duration: 7s; }
        .bubble:nth-child(7) { left: 70%; animation-duration: 6s; }

        /* Input field styles */
        .form-control {
            width: 80%;
            margin: 0 auto;
            transition: all 0.3s ease;
        }

        .form-control:focus {
            border-color: #5392a3;
            box-shadow: #0e6876;
        }

        /* Button styles */
        .btn-submit {
            background-color: #5392a3;
            border-color: #0e6876;
        }

        .btn-submit:hover {
            background: linear-gradient(135deg, #d4f1f9, #a8e0e8);
            transform: scale(1.05);
            color: #000000;
        }

    </style>
</head>
<body>
    <!-- Including header -->
    <header class="bg-blue-500 text-white p-4 text-center">
        <%- include('../partials/user_loginheader.ejs') %>
    </header>

    <div class="forgot-password-page">
        <div class="forgot-password-box">
            <h2 class="text-center text-2xl font-bold mb-4">Forgot Password</h2>

            <!-- Display error message if it exists -->
            <% if (typeof error !== 'undefined') { %>
                <div class="alert alert-danger" role="alert">
                    <%= error %>
                </div>
            <% } %>

            <!-- Display success message if it exists -->
            <% if (typeof success !== 'undefined') { %>
                <div class="alert alert-success" role="alert">
                    <%= success %>
                </div>
            <% } %>

            <form action="/auth/forgotpassword" method="POST">
                <div class="form-group">
                    <label for="email" class="form-label">Enter your email address:</label>
                    <input type="email" id="email" name="email" class="form-control mt-1" required placeholder="Your email address" />
                </div>
                <button type="submit" class="btn btn-primary btn-block mt-3 btn-submit btn-sm">Send</button>
                <p class="text-center mt-3">
                    <a href="/user/login" class="text-blue-500 hover:underline">Remembered your password? Login here</a>
                </p>
            </form>
        </div>
        <!-- Floating bubbles -->
        <div class="bubble"></div>
        <div class="bubble"></div>
        <div class="bubble"></div>
        <div class="bubble"></div>
        <div class="bubble"></div>
        <div class="bubble"></div>
        <div class="bubble"></div>
    </div>

    <!-- Including footer -->
    <footer class="bg-gray-800 text-white p-4 text-center">
        <%- include('../partials/footer.ejs') %>
    </footer>

    <!-- Bootstrap JS, Popper.js, and jQuery -->
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.3/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>

    <!-- Custom JS -->
    <script src="/js/main.js"></script>
</body>

</html>
