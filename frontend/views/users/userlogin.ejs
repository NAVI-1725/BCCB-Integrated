<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>User Login</title>
    
    <!-- Bootstrap CSS -->
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">

    <!-- Custom CSS -->
    <link href="/css/styles.css" rel="stylesheet">

    <!-- Confetti JS -->
    <script src="https://cdn.jsdelivr.net/npm/canvas-confetti@1.5.1/dist/confetti.browser.min.js"></script>

    <style>
        @keyframes move-background {
            from {
                background-position: 0 0;
            }
            to {
                background-position: 100% 100%;
            }
        }

        body::before {
            content: '';
            position: absolute;
            width: 100%;
            height: 100%;
            background: linear-gradient(135deg, #d4f1f9, #a8e0e8);
            z-index: -1;
            animation: move-background 20s linear infinite;
        }

        .login-page {
            min-height: 82vh;
            display: flex;
            justify-content: center;
            align-items: center;
            background: linear-gradient(135deg, #d4f1f9, #a8e0e8);
            position: relative;
            overflow: hidden;
        }

        .nav-link {
            position: relative;
            display: inline-block;
            padding-bottom: 2px;
        }

        .nav-link::after {
            content: '';
            position: absolute;
            width: 100%;
            height: 2px;
            background-color: #007bff;
            bottom: 0;
            left: 0;
            transform: scaleX(0);
            transform-origin: bottom right;
            transition: transform 0.3s ease-out;
        }

        .nav-link:hover::after {
            transform: scaleX(1);
            transform-origin: bottom left;
        }
        
        a {
            color: #0a879a;
            text-decoration: none;
            transition: color 0.3s ease;
        }

        a:hover {
            color: #6dc9e2;
            text-decoration: underline;
        }

        .login-box {
            width: 100%;
            max-width: 510px;
            background-color: rgba(255, 255, 255, 0.5);
            border-radius: 30px;
            padding: 35px;
            box-shadow: 0 20px 50px rgba(0, 0, 0, 0.3);
            backdrop-filter: blur(10px);
            animation: floating 3s ease-in-out infinite;
            position: relative;
            overflow: hidden;
        }

        .login-box:hover {
            box-shadow: 0 20px 40px rgba(0, 0, 0, 0.4);
        }

        @keyframes floating {
            0%, 100% {
                transform: translateY(0px);
            }
            50% {
                transform: translateY(-10px);
            }
        }

        .bubble {
            position: absolute;
            bottom: -20px;
            width: 30px;
            height: 30px;
            border-radius: 50%;
            background-color: rgba(255, 255, 255, 0.6);
            animation: float-bubbles 5s ease-in-out infinite;
        }

        @keyframes float-bubbles {
            0% {
                opacity: 0.7;
                transform: translateY(0) scale(1);
            }
            50% {
                opacity: 0.4;
                transform: translateY(-50px) scale(1.5);
            }
            100% {
                opacity: 0.7;
                transform: translateY(-100px) scale(1);
            }
        }

        .bubble:nth-child(1) { left: 10%; animation-duration: 6s; }
        .bubble:nth-child(2) { left: 20%; animation-duration: 7s; }
        .bubble:nth-child(3) { left: 30%; animation-duration: 5s; }
        .bubble:nth-child(4) { left: 40%; animation-duration: 8s; }
        .bubble:nth-child(5) { left: 50%; animation-duration: 6s; }
        .bubble:nth-child(6) { left: 60%; animation-duration: 7s; }
        .bubble:nth-child(7) { left: 70%; animation-duration: 6s; }

        .form-control {
            width: 80%;
            margin: 0 auto;
            transition: all 0.3s ease;
        }

        .form-control:focus {
            border-color: #95d4de;
            box-shadow: 0 0 8px rgba(63, 146, 171, 0.5);
        }

        .btn-login {
            background: linear-gradient(135deg, #d4f1f9, #a8e0e8);
            color: #005f73;
            transition: background-color 0.3s ease, transform 0.3s ease;
            width: 200px;
            display: block;
            margin: 20px auto;
        }

        .btn-login:hover {
            transform: scale(1.05);
            color: #000000;
            background: linear-gradient(135deg, #d4f1f9, #a8e0e8);
        }

        .error-message {
            color: #d9534f;
            text-align: center;
            font-weight: bold;
            margin-bottom: 15px;
        }
        
        .success-message {
            color: #28a745;
            text-align: center;
            font-weight: bold;
            margin-bottom: 15px;
        }
    </style>
</head>
<body>
    <!-- Including header -->
    <header class="bg-blue-500 text-white p-4 text-center">
        <%- include('../partials/user_loginheader.ejs') %>
    </header>

    <div class="login-page">
        <div class="login-box">
            <h2 class="text-center text-2xl font-bold mb-4">User Login</h2>

            <% 
                // Ensure query, error, and success are safely defined to avoid errors
                var query = typeof query !== 'undefined' ? query : {};
                var errorMessage = (query.error ? query.error : (typeof error !== 'undefined' ? error : ""));
                var successMessage = (query.success ? query.success : (typeof success !== 'undefined' ? success : ""));
            %>

            <!-- Display success message if available -->
            <% if(successMessage) { %>
                <div class="alert alert-success" role="alert">
                    <%= successMessage %>
                </div>
                <script>
                    confetti({
                        particleCount: 100,
                        spread: 70,
                        origin: { y: 0.6 }
                    });
                </script>
            <% } %>

            <!-- Display error message if available -->
            <% if(errorMessage) { %>
                <div class="alert alert-danger" role="alert">
                    <%= errorMessage %>
                </div>
                <script>
                    confetti({
                        particleCount: 100,
                        spread: 70,
                        origin: { y: 0.6 }
                    });
                </script>
            <% } %>

            <form action="/user/login" method="post">
                <div class="form-group">
                    <label for="email" class="form-label">Email Address</label>
                    <input type="email" class="form-control mt-1" id="email" name="email" required aria-label="Enter your email address" aria-describedby="emailHelp">
                </div>
                <div class="form-group">
                    <label for="password" class="form-label">Password</label>
                    <input type="password" class="form-control mt-1" id="password" name="password" required aria-label="Enter your password">
                </div>
                <button type="submit" class="btn btn-primary btn-block mt-3 btn-login">Login</button>
                <p class="text-center mt-2">
                    <a href="/user/forgotpassword" class="text-red-500">Forgot Password?</a>
                </p>
            </form>
            <p class="text-center mt-3">
                <a href="/user/register" class="text-red-700">Don't have an account? Register here</a>
            </p>
        </div>
        <!-- Floating bubbles -->
        <div class="bubble"></div>
        <div class="bubble"></div>
        <div class="bubble"></div>
        <div class="bubble"></div>
        <div class="bubble"></div>
        <div class="bubble"></div>
        <div class="bubble"></div>
    </div>

    <!-- Including footer -->
    <footer class="bg-gray-800 text-white p-4 text-center">
        <%- include('../partials/footer.ejs') %>
    </footer>

    <!-- Bootstrap JS, Popper.js, and jQuery -->
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.3/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>

    <!-- Custom JS -->
    <script src="/js/main.js"></script>
</body>
</html>
